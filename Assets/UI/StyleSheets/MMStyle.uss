.button {
    left: 0;
    top: auto;
    bottom: auto;
    margin-top: 160px;
    margin-right: 50px;
    margin-bottom: 0;
    margin-left: 50px;
    width: 30%;
    height: 15%;
    align-self: center;
    -unity-font-definition: url("project://database/Assets/UI/Fonts/GothicBlastDemo-xRRLR.ttf?fileID=12800000&guid=e809aa247bc7dcd43aa823516a7219f5&type=3#GothicBlastDemo-xRRLR");
    font-size: 500%;
    border-left-color: rgb(135, 135, 135);
    border-right-color: rgb(135, 135, 135);
    border-top-color: rgb(135, 135, 135);
    border-bottom-color: rgb(135, 135, 135);
    border-top-width: 20px;
    border-right-width: 20px;
    border-bottom-width: 20px;
    border-left-width: 20px;
    -unity-text-align: middle-center;
    background-color: rgb(188, 188, 188);
    transition-duration: 0.35s;
}

.button:focus {
    background-color: rgb(142, 142, 142);
    border-left-color: rgb(72, 72, 72);
    border-right-color: rgb(72, 72, 72);
    border-top-color: rgb(72, 72, 72);
    border-bottom-color: rgb(72, 72, 72);
    scale: 1.1 1.1;
}

.toggleButton {
    -unity-font-definition: url("project://database/Assets/UI/Fonts/GothicBlastDemo-xRRLR.ttf?fileID=12800000&guid=e809aa247bc7dcd43aa823516a7219f5&type=3#GothicBlastDemo-xRRLR");
    color: rgb(255, 255, 255);
    -unity-text-outline-color: rgb(255, 255, 255);
    background-color: rgb(154, 154, 154);
    border-left-color: rgba(255, 255, 255, 0);
    border-right-color: rgba(255, 255, 255, 0);
    border-top-color: rgba(255, 255, 255, 0);
    border-bottom-color: rgba(255, 255, 255, 0);
    align-items: stretch;
    align-self: center;
    align-content: flex-start;
}

.button:hover {
    background-color: rgb(142, 142, 142);
    border-left-color: rgb(72, 72, 72);
    border-right-color: rgb(72, 72, 72);
    border-top-color: rgb(72, 72, 72);
    border-bottom-color: rgb(72, 72, 72);
    scale: 1.1 1.1;
}
